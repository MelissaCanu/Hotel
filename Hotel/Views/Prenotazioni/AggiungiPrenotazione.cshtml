        <div class="col-md-10">
            @Html.EditorFor(model => model.NumeroCamera, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NumeroCamera, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Servizi", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @foreach (var servizio in ViewBag.Servizi)
            {
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="ServiziPrenotati" value="@servizio.ID" /> @servizio.Descrizione
