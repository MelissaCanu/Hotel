@model Hotel.Models.Prenotazione

@{
    ViewBag.Title = "AggiungiPrenotazione";
}

<h2>AggiungiPrenotazione</h2>


@using (Html.BeginForm("AggiungiPrenotazione", "Prenotazioni", FormMethod.Post))
{
    @Html.AntiForgeryToken()

